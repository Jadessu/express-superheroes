<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Document</title>
</head>
  <body>
    <h1>Superheroes</h1>
    <% if(error) { %>
      <h2><%= error %></h2>
    <% } %>
    <ul>
      <% superheroes.forEach(function(superhero) { %>
        <li>
          <!-- <%= superhero.name %> -->
          <a href="/superheroes/<%= superhero._id %>"><%= superhero.name %></a>
          
            - 
          <%= superhero.superpowers ? 'Has superpowers' : 'Does not have superpowers' %>
        </li>
      <% }) %>
    </ul>
</body>
</html>
